<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coconut.helloworld_xyz.MainActivity">


    <EditText
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/value"
        android:hint="  Please input the value:"
        android:layout_above="@+id/threshold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="#d5f4f6" />

    <EditText
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/threshold"
        android:hint="  Please input the threshold:"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/value"
        android:layout_alignStart="@+id/value"
        android:background="#d5f4f6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSubmit"/>

</RelativeLayout>
